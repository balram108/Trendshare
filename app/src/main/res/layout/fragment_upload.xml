<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Upload">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/backarrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_back_black_24dp"/>

    <ImageView
        android:layout_marginTop="65dp"
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/profilepp"/>


    <EditText
        android:hint="Write about Product"
        android:textColorHint="@android:color/black"
        android:id="@+id/info"
        android:layout_marginTop="65dp"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imageView"
        />

    <RatingBar
        android:layout_below="@id/info"
        android:id="@+id/rating"
        android:layout_toRightOf="@id/imageView"
        android:numStars="5"
        android:rating="1"
        android:textAlignment="center"
        android:layout_width="230dp"
        android:layout_height="40dp" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:textColor="@android:color/black"
        android:textSize="15dp"
        android:layout_below="@id/rating"
        android:layout_toRightOf="@id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Give your Rating"/>

    <Button
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imageView"
        android:id="@+id/choosepic"
        android:layout_marginTop="25dp"
        android:layout_width="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:text="Browse For Images"/>

</RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <EditText
        android:layout_marginTop="120dp"
        android:layout_width="match_parent"
        android:id="@+id/urlLink"
        android:textColorHint="@android:color/black"
        android:layout_height="wrap_content"
        android:hint=" Product Link:"/>

    <LinearLayout
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <Button
        android:background="#A6A1F6"
        android:id="@+id/Finish"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="Click here to Upload"
        android:textSize="10dp"
        android:layout_marginLeft="50dp"/>


    <Button
        android:layout_marginLeft="35dp"
        android:background="#A6A1F6"
        android:id="@+id/getData"
        android:textSize="10dp"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="See Post"/>

</LinearLayout>

</LinearLayout>

</LinearLayout>